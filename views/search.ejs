<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Window</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-center">

    <div class="container py-4">
        <a href="/profile" 
        class="float-end text-decoration-none text-muted fw-bold link-primary">
            <%= usernameData.username %>
        </a>
        <%- include('partials/header.ejs') %>
        <h2 class="mt-2">Search</h2>
    </div>

    <form action="/webcams" method="GET" class="mb-4 mx-auto" style="max-width: 400px;">
        <div class="mb-3 p-3 border rounded">
            <label for="country" class="form-label">Country:</label>
            <select name="country" id="country" class="form-select form-select-sm">
                <option value="" selected>Any Country</option>
                <% for (let c of countries) { %>
                    <option value="<%= c.code %>"><%= c.name %></option>
                <% } %>
            </select>
        </div>
    
        <div class="mb-3 p-3 border rounded">
            <label for="category" class="form-label">Category:</label>
            <select name="category" id="category" class="form-select form-select-sm">
                <option value="" selected>Any Category</option>
                <% for (let cat of categories) { %>
                    <option value="<%= cat.id %>"><%= cat.name %></option>
                <% } %>
            </select>
        </div>
    
        <button type="submit" class="btn btn-success w-100">Search</button>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
